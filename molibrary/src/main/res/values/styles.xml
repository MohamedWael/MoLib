<resources>

    <!-- Base application theme. -->
    <style name="MoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/moColorPrimary</item>
        <item name="colorPrimaryDark">@color/moColorPrimaryDark</item>
        <item name="colorAccent">@color/moColorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--<style name="ImageCroper" parent="Base.Theme.AppCompat">-->
    <style name="MoImageCropper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/moColorPrimary</item>
        <item name="colorPrimaryDark">@color/moColorPrimaryDark</item>
        <item name="colorAccent">@color/moColorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MoText">
        <item name="android:textColor">@color/moColorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text20Style" parent="MoText">
        <item name="android:textSize">@dimen/text_size20</item>
    </style>

    <style name="Text18Style" parent="MoText">
        <item name="android:textSize">@dimen/text_size18</item>
    </style>

    <style name="Text16Style" parent="MoText">
        <item name="android:textSize">@dimen/text_size16</item>
    </style>

    <style name="Text14Style" parent="MoText">
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <style name="Button" parent="MoText">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
